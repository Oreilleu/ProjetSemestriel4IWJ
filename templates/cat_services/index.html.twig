      <meta name="csrf-token" content="{{ csrf_token('delete_category') }}">
  </head>
{% endblock %}

{% block body %}
  <h1 class="font-bold uppercase text-2xl my-5 border-b-black border-b-2">Liste des catégories</h1>

  {% if cat_services|length < 1 %}
