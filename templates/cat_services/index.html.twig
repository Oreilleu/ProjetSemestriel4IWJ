    <a href="/cat-services/new" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Créer une nouvelle catégorie.</a>
  {% endif %}

  <ul class="md:flex md:justify-between md:gap-3">
    {% for cat_service in cat_services %}
      <li class="p-4 md:w-1/3 h-full bg-primary-500 border-2 border-opacity-60 rounded-lg overflow-hidden">
        <a href="#{{ cat_service.nom }}">
          <article>
            <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{ asset('images/default_category.jpg') }}" alt="Image par défaut catégorie" />
