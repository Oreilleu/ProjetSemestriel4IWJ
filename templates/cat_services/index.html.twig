{% extends 'base.html.twig' %}

{% block title %}
  Liste des catégories
{% endblock %}

{% block body %}
  <h1 class="font-bold uppercase">Liste des catégories</h1>

  <ul class="md:flex md:justify-between md:gap-3">
    {% for cat_service in cat_services %}
      <li class="p-4 md:w-1/3 h-full border-2 border-opacity-60 rounded-lg overflow-hidden">
        <a href="#{{ cat_service.nom }}">
          <article>
            <img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{ asset('images/default_category.jpg') }}" alt="Image par défaut catégorie" />
            <div class="p-6">
              <h2 class="tracking-widest text-xs font-medium text-gray-400 mb-1">Catégorie</h2>
              <h1 class="text-lg font-medium text-gray-900 mb-3">{{ cat_service.nom }}</h1>
            </div>
          </article>
        </a>
      </li>
    {% endfor %}
  </ul>
{% endblock %}
