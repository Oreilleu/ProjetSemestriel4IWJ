{% extends 'base.html.twig' %}

{% block title %}Edit CatServices{% endblock %}

{% block body %}
    <h1 class="font-bold uppercase text-2xl my-5 border-b-black border-b-2">Modifier la catégorie {{ cat_service.nom }}</h1>

    {{ include('cat_services/_form.html.twig', {'button_label': 'Modifier'}) }}
    
    {{ include('cat_services/_delete_form.html.twig', { 
        cat_service_id: cat_service.id,
        cat_service_name: cat_service.nom,
        labelButton: 'Supprimer la catégorie',
        classButton: "block my-3 text-white bg-primary-500 border-0 py-2 px-8 focus:outline-none hover:bg-primary-600 rounded text-lg mr-3",
        }) 
    }}

    <a href="{{ path('app_cat_services_index') }}" class="font-medium text-blue-600 dark:text-blue-500 hover:underline">Liste des catégories</a>
{% endblock %}
