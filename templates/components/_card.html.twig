<li class="h-full md:max-w-72 bg-white rounded-lg overflow-hidden mb-3 shadow-md dark:text-text-dark-mode-200 dark:bg-element-dark-mode-900">
	<article>
		<img class="lg:h-48 md:h-36 w-full object-cover object-center" src="{{ item_filepath is defined and item_filepath ? asset(item_filepath) : asset('images/default_' ~ item_default_image ~ '.jpg') }}" alt="Image par défaut catégorie"/>
		<div class="mt-3 pb-3">
			<div class="pl-4">
					{% if item_path == 'produits' %}
						<a href="{{ path('app_categories_index') }}"><h2 class="tracking-widest text-xs font-medium mb-1">{{item_categorie_title}}</h2></a>
					{% endif %}
					<h1 class="text-lg font-medium mb-2">{{ item_nom }}</h1>
					<div class="flex pr-4">
						{% if item_prix is defined %}
							<p class='text-lg ml-auto'>{{ item_prix }} € </p>
						{% endif %}
					</div>
			</div>
			<div class="flex justify-center mt-4">
				{% if item_path == 'produits' %}
					<a href="{{ path('app_' ~ item_path ~ '_edit', { id: item_id }) }}" tabindex="-1" class="mr-3" >
						<button class="bg-primary-300 dark:bg-background-dark-mode-600 dark:hover:bg-element-dark-mode-700 border-0 py-2 px-8 rounded bleu:hover:bg-bleu-theme-400 bleu:bg-bleu-theme-600">
							{{ include('components/SVG/_update_SVG.html.twig') }}
						</button>
					</a>
				{% elseif item_path == 'categories' %}
					<a href="{{ path('app_produits_categorie', { idCategorie: item_id }) }}" tabindex="-1" class="mr-3" >
						<button class="bg-primary-300 dark:bg-background-dark-mode-600 dark:hover:bg-element-dark-mode-700 border-0 py-2 px-8 rounded bleu:hover:bg-bleu-theme-400 bleu:bg-bleu-theme-600">
							{{ include('components/SVG/_eye_SVG.html.twig') }}
						</button>
					</a>
				{% endif %}
				{% if item_path == 'produits' %}
				{{ include('components/_delete_form.html.twig', { 
					item_id,
					path: item_path,
					labelButton: include('components/SVG/_delete_SVG.html.twig'),
					classButton: "bg-primary-300 dark:bg-background-dark-mode-600 dark:hover:bg-element-dark-mode-700 border-0 py-2 px-8 rounded bleu:hover:bg-bleu-theme-400 bleu:bg-bleu-theme-600",
					classForm: "inline-block",
					title: "Suppression du " ~ item_type ~ " : " ~ item_nom,
					content: delete_content  
					}) 
				}}
				{% else %}
					<a href="{{ path('app_' ~ item_path ~ '_edit', { id: item_id }) }}" tabindex="-1" class="mr-3" >
						<button class="bg-primary-300 dark:bg-background-dark-mode-600 dark:hover:bg-element-dark-mode-700 border-0 py-2 px-8 rounded bleu:hover:bg-bleu-theme-400 bleu:bg-bleu-theme-600">
							{{ include('components/SVG/_update_SVG.html.twig') }}
						</button>
					</a>
				{% endif %}
			</div>
		</div>
	</article>
</li>
