{% extends 'base.html.twig' %}

{% block title %}Factures{% endblock %}

{% block body %}
    <h1>Factures</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ facture.id }}</td>
            </tr>
            <tr>
                <th>Date</th>
                <td>{{ facture.date ? facture.date|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Statut</th>
                <td>{{ facture.statut }}</td>
            </tr>
            <tr>
                <th>Taxe</th>
                <td>{{ facture.taxe }}</td>
            </tr>
            <tr>
                <th>Created_at</th>
                <td>{{ facture.createdAt ? facture.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Total_ht</th>
                <td>{{ facture.totalHt }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_factures_index') }}">back to list</a>

    <a href="{{ path('app_factures_edit', {'id': facture.id}) }}">edit</a>

    {{ include('factures/_delete_form.html.twig') }}
