{% extends 'base.html.twig' %}

{% block title %}Enregistrer votre entreprise{% endblock %}

{% block body %}
<section class="my-24 h-screen flex justify-center items-center">
    <div class="bg-white flex flex-col md:grid md:grid-cols-2 gap-3 max-w-4xl md:border px-5 py-10 md:shadow-md rounded-lg">
        <div
            class="lg:flex-grow lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
            <h1 class="md:mt-0 mt-80 sm:text-4xl text-3xl mb-4 font-medium text-gray-900">
                <span class="text-[#C79364]">
                    Inscrivez-vous dès maintenant
                </span> et profitez de nos services:
            </h1>
            <p class="mb-8 leading-relaxed font-subtitle">pour bénéficier de devis personnalisés, d'une gestion de
                facturation dédiée aux PME et de la liberté totale pour votre entreprise.</p>
        </div>
        <div class="w-full p-8">

            <h2 class="text-2xl font-title text-gray-700 text-center">Enregistrer votre entreprise</h2>
            {{ include('registration/_form.html.twig', { button_label: "Enregistrer son entreprise" }) }}
            <div class="mt-4 flex items-center justify-between">
                <span class="border-b w-1/5 md:w-1/4"></span>
                <a href="{{ path('app_login') }}" class="text-xs text-gray-500 uppercase">Ou se connecter</a>
                <span class="border-b w-1/5 md:w-1/4"></span>
            </div>
        </div>
    </div>
</section>
{% endblock %}