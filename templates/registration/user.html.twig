{% extends 'base.html.twig' %}
{% block title %}S'enregister{% endblock %}
{% block body %}
	<section class="text-gray-600 body-font">
		<div class="container mx-auto flex px-5 py-24 md:flex-row flex-col items-center">
			<!-- Left column -->
			<div class="lg:flex-grow md:w-1/2 lg:pr-24 md:pr-16 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
				<h1 class="font-title sm:text-4xl text-3xl mb-4 font-medium text-gray-900 dark:text-text-dark-mode-200">
					<br class="hidden lg:inline-block">Découvrez dès maintenant :
				</h1>
				<p class="mb-8 leading-relaxed font-subtitle dark:text-text-dark-mode-200">Des devis sur mesure, Une gestion de facturation dédiée aux PME, Liberté totale pour votre entreprise.</p>
			</div>
			<!-- Right column -->
			<div class="w-full p-8 lg:w-1/2">

				<h2 class="text-2xl font-title text-gray-700 text-center dark:text-text-dark-mode-200">S'inscrire</h2>

				{{ form_start(form) }}
					<div class="mt-4">
						{{ include('components/_form_group.html.twig', {
							field: form.email,
							label: 'Email * :',
						}) }}
					</div>
					<div class="mt-4">
						{{ include('components/_form_group.html.twig', {
							field: form.password.first,
							label: 'Mot de passe * :',
						}) }}

						{{ include('components/_form_group.html.twig', {
							field: form.password.second,
							label: 'Répéter le mot de passe * :',
						}) }}

					</div>
					<div class="mt-8">
						{{ include('components/_submit_button.html.twig', {
							content: 'S\'inscrire'
						}) }}
					</div>
				{{ form_end(form) }}
			</div>
		</div>
	</section>
{% endblock %}