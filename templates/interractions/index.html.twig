{% extends 'base.html.twig' %}

{% block title %}Interractions index{% endblock %}

{% block body %}
    <h1>Interractions index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for interraction in interractions %}
            <tr>
                <td>{{ interraction.id }}</td>
                <td>
                    <a href="{{ path('app_interractions_show', {'id': interraction.id}) }}">show</a>
                    <a href="{{ path('app_interractions_edit', {'id': interraction.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="2">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_interractions_new') }}">Create new</a>
{% endblock %}
