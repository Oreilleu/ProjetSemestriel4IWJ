    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Quantite</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for details_service in details_services %}
            <tr>
                <td>{{ details_service.id }}</td>
                <td>{{ details_service.quantite }}</td>
                <td>
                    <a href="{{ path('app_details_services_show', {'id': details_service.id}) }}">show</a>
