{{ form_start(form) }}
<label class="flex flex-col">
    {{ form_label(form.id_entreprise, 'Entreprise :', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold'}}) }}
    <div class="text-red-500 text-sm font-bold mb-3">
        {{ form_errors(form.id_entreprise, {'attr': {'class': 'text-red-500 text-sm font-bold mb-3'}}) }}
    </div>   
    {{ form_widget(form.id_entreprise, {'attr': {'class': 'shadow border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-3'}}) }} 
    
</label>

<label class="flex flex-col">
    {{ form_label(form.email, 'Email *', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
    <div class="text-red-500 text-sm font-bold mb-3">
        {{ form_errors(form.email) }}
    </div>
    {{ form_widget(form.email, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-3'}}) }}
</label>

{% if form.password is defined %}
<label class="flex flex-col">
    {{ form_label(form.password, 'Mot de passe', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
    <div class="text-red-500 text-sm font-bold mb-3">
        {{ form_errors(form.password) }}
    </div>
    {{ form_widget(form.password, {'attr': {'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-3'}}) }}
</label>
{% endif %}

<label class="flex flex-col">
    {{ form_label(form.roles, 'Roles', {'label_attr': {'class': 'block text-gray-700 text-sm font-bold mb-2'}}) }}
    <div class="text-red-500 text-sm font-bold mb-3">
        {{ form_errors(form.roles) }}
    </div>
    <div class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline mb-3 bg-white flex">
        {% for role in form.roles %}
                {{ form_widget(role) }}
                {{ form_label(role) }}
        {% endfor %}
    </div>
</label>

<input
        type="submit"
        value="Enregistrer"
        class="focus:outline-none mt-5 bg-primary-500 px-2 py-2 text-white font-bold w-full hover:bg-primary-600"
/>
{{ form_end(form) }}


