{% extends 'base.html.twig' %}

{% block title %}Devis index{% endblock %}

{% block body %}
    {{ include('components/_title.html.twig', { content: 'Liste des devis'}) }}
    
    {% if devis is empty %}
        {{ include('components/_empty_message.html.twig', { content: 'Aucun devis n\'a été trouvé.' }) }}
    {% else %}
        <table class="min-w-full divide-y divide-gray-200">
            <thead class="bg-primary-100 font-title">
            <tr>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Date
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Statut
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Client
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Prix HT
                </th>
                <th scope="col" class="px-6 py-3 text-left text-xs font-medium text-gray-500 uppercase tracking-wider">
                    Actions
                </th>
            </tr>
            </thead>
            <tbody class="divide-y divide-gray-200 bg-color3-50 font-subtitle">
            {% for devi in devis %}
                <tr>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ devi.date ? devi.date|date('d/m/Y') : '' }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ devi.statut }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ devi.Client.nom }}</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm text-gray-900">{{ devi.getTotalHt() }} €</td>
                    <td class="px-6 py-4 whitespace-nowrap text-sm font-medium flex space-x-4">
                        {% if devi.statut != 'Accepté' %}
                            <a href="/devis/{{ devi.id }}/edit">
                                <button class="border-0 py-2 px-8 hover:bg-primary-600 rounded">
                                    {{ include('components/SVG/_update_SVG.html.twig') }}
                                </button>
                            </a>
                        {% endif %}
                        {{ include('components/_delete_form.html.twig', {
                            item_id: devi.id,
                            path: 'devis',
                            labelButton: include('components/SVG/_delete_SVG.html.twig'),
                            title: "Suppression du devis : " ~ devi.id,
                            content: "Êtes-vous sûr de vouloir supprimer ce devis ?",
                            classButton: 'border-0 py-2 px-8 hover:bg-primary-600 rounded'
                        }) }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    {% endif %}

    {{ include('components/_link.html.twig', { 
        content: 'Créer un nouveau devis',
        path: 'app_devis_new'
    } ) }}
{% endblock %}
