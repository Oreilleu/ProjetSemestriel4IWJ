{% extends 'base.html.twig' %}

{% block title %}Edit Lots{% endblock %}

{% block body %}
    {{ include('components/_title.html.twig', { content: 'Modifier le lot' ~ lot.id}) }}

    {{ include('lots/_form.html.twig', {'button_label': 'Modifier'}) }}

    {{ include('components/_delete_form.html.twig', {
        item_id: lot.id,
        path: 'lots',
        labelButton: 'Supprimer',
        classButton: "my-3 text-white bg-primary-500 border-0 py-2 px-8 focus:outline-none hover:bg-primary-600 rounded text-lg mr-3",
        classForm: "inline-block",
        title: "Suppression du lot : " ~ lot.adresse,
        content: "Êtes-vous sûr de vouloir supprimer ce lot ?"
    }) }}

    {{ include('components/_link.html.twig', { 
        content: 'Retour à la liste des lots',
        path: 'app_lots_index'
    } ) }}

{% endblock %}
