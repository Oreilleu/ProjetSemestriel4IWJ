{% extends 'base.html.twig' %}

{% block title %}Lots index{% endblock %}

{% block body %}
    <h1>Lots index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Superficie</th>
                <th>Type</th>
                <th>Adresse</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for lot in lots %}
            <tr>
                <td>{{ lot.id }}</td>
                <td>{{ lot.superficie }}</td>
                <td>{{ lot.type }}</td>
                <td>{{ lot.adresse }}</td>
                <td>
                    <a href="{{ path('app_lots_show', {'id': lot.id}) }}">show</a>
                    <a href="{{ path('app_lots_edit', {'id': lot.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_lots_new') }}">Create new</a>
{% endblock %}
