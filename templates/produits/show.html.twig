{% extends 'base.html.twig' %}

{% block title %}Produits{% endblock %}

{% block body %}
    <h1>Produits</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Catégorie</th>
                <td>{{ produit.idCategorieProduits ? produit.idCategorieProduits.nom : 'Sans catégorie' }}</td>
            </tr>
            <tr>
                <th>Nom</th>
                <td>{{ produit.nom }}</td>
            </tr>
            <tr>
                <th>Prix</th>
                <td>{{ produit.prix }} €</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_produits_index') }}">back to list</a>

    <a href="{{ path('app_produits_edit', {'id': produit.id}) }}">edit</a>

    	{{ include('components/_delete_form.html.twig', {
        item_id: produit.id,
        path: 'produits',
        labelButton: 'Supprimer',
        classButton: "my-3 text-white bg-primary-500 border-0 py-2 px-8 focus:outline-none hover:bg-primary-600 rounded text-lg mr-3",
        classForm: "inline-block",
        title: "Suppression du produit : " ~ produit.nom,
        content: "Êtes-vous sûr de vouloir supprimer ce produit ?"
    }) }}
{% endblock %}
