{% extends 'base.html.twig' %}

{% block title %}Edit Produits{% endblock %}

{% block body %}
    {{ include('components/_title.html.twig', { content : 'Modifier le produit' ~ produit.nom}) }}

    {{ include('produits/_form.html.twig', {'button_label': 'Modifier'}) }}

    {{ include('components/_delete_form.html.twig', {
        item_id: produit.id,
        path: 'produits',
        labelButton: 'Supprimer',
        classButton: "my-3 text-white bg-primary-500 border-0 py-2 px-8 focus:outline-none hover:bg-primary-600 rounded text-lg mr-3",
        classForm: "inline-block",
        title: "Suppression du produit : " ~ produit.nom,
        content: "Êtes-vous sûr de vouloir supprimer ce produit ?"
    }) }}

    {{ include('components/_link.html.twig', {
        path: 'app_produits_index',
        content: 'Liste des produits'
    }) }}

{% endblock %}
