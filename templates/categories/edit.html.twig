{% extends 'base.html.twig' %}

{% block title %}Edit Categories{% endblock %}

{% block body %}
    <h1 class="font-bold uppercase text-2xl my-5 border-b-black border-b-2">Modifier la catégorie {{ categorie.nom }}</h1>

    {{ include('categories/_form.html.twig', {'button_label': 'Modifier'}) }}
    
    {{ include('categories/_delete_form.html.twig', { 
        cat_service_id: categorie.id,
        cat_service_name: categorie.nom,
        labelButton: 'Supprimer',
        classButton: "my-3 text-white bg-primary-500 border-0 py-2 px-8 focus:outline-none hover:bg-primary-600 rounded text-lg mr-3",
        classForm: "inline-block"
        }) 
    }}

    <a href="{{ path('app_categories_index') }}" class="block font-medium text-blue-600 dark:text-blue-500 hover:underline">Liste des catégories</a>
{% endblock %}
